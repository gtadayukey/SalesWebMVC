@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <h3>Simple search</h3>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 form-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control"  />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 form-label mt-3">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2 mt-2">
                        <button type="submit" class="btn btn-light">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <h3 class="mt-5">Grouping search</h3>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 form-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 form-label mt-3">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2 mt-2">
                        <button type="submit" class="btn btn-light">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
